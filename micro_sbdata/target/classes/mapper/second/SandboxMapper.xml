<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.louhwz.sbdata.repository.second.SandboxDAO">


    <resultMap id="HotelOrder" type="com.louhwz.sbdata.utils.HotelOrder">
        <result property="groupId" column="GroupId" />
        <result property="round" column="Round" />
        <result property="iRoomId" column="IRoomId" />
        <result property="price" column="Price" />
    </resultMap>

    <select id="testSecond" resultType="String">
        SELECT role_name
        FROM ida_role
    </select>

    <select id="getReadyInfo" resultType="boolean" parameterType="Integer">
        SELECT State
        FROM I_ReadyStatus a
        WHERE a.GroupId = groupId
    </select>

    <select id="getHotelOrder" resultMap="HotelOrder" parameterType="Integer">
        SELECT Round, ICustomerId, IRoomId, Price
        FROM I_RoomOrders
        WHERE GroupId = groupId;
    </select>
</mapper>